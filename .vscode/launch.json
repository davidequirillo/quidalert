{
  "version": "0.2.0",
  "configurations": [
  {
    "name": "Debug Server (FastAPI)",
    "type": "debugpy",
    "request": "launch",
    "program": "${workspaceFolder}/server/api_backend/main.py",
    "console": "integratedTerminal"
  },
  {
    "name": "Debug Client (Flutter - Chrome)",
    "type": "dart",
    "request": "launch",
    "cwd": "${workspaceFolder}/client/flutter_app",
    "deviceId": "chrome"
  }, 
{
    "name": "Debug Client (Flutter - Android)",
    "type": "dart",
    "request": "launch",
    "cwd": "${workspaceFolder}/client/flutter_app",
    "deviceId": "emulator-5554"
  }]
}
